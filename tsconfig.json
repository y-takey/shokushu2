{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "baseUrl": "./",
    "rootDir": "./",
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "outDir": "./dist/",
    "paths": {
      "~/*": ["app/*"],
      "~": ["app"]
    },
    "pretty": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "lib": ["es2015", "es2017", "dom"]
  },
  "exclude": ["node_modules", "**/node_modules/*"],
  "include": ["./app/**/*"]
}
